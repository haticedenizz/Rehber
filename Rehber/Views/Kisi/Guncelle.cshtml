@model Rehber.Models.KisiModel.KisiGucelleViewModel
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kişi Guncelle</h2>
@*<form class="form-horizontal" method="post" action="/Kisi/Guncelle/">*@

@using (@Html.BeginForm("Guncelle","Kisi",FormMethod.Post,new { @class="form-horizontal"}))
{


    @Html.HiddenFor(x=>x.Kisi.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Kisi.Ad)
        @Html.TextBoxFor(x => x.Kisi.Ad, null, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Kisi.Soyad)
        @Html.TextBoxFor(x => x.Kisi.Soyad, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Kisi.CepTelefon)
        @Html.TextBoxFor(x => x.Kisi.CepTelefon, null, new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.EmailAdres)
        @Html.TextBoxFor(x => x.Kisi.EmailAdres, null, new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(x => x.Kisi.Adres)
        @Html.TextBoxFor(x => x.Kisi.Adres, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Güncelle" />
    </div>

@*</form>*@
}

